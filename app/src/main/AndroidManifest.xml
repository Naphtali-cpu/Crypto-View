<!--            android:name=".mainui.LaunchActivity"-->
<!--            android:exported="true">-->

<!--        </activity>-->

        <activity
            android:name=".mainui.Notifications"
            android:exported="false" />
        <activity
            android:name=".mainui.AppInfo"
            android:exported="false" />
        <activity
            android:name=".mainui.UpdateAccount"
            android:exported="false" />
        <activity
            android:name=".mainui.Privacy"
            android:exported="false" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar" />
        <activity
            android:name=".mainui.ShowUsersActivity"
            android:exported="false" />
        <activity
