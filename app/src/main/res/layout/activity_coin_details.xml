<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBF3FB"
    tools:context=".mainui.CoinDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBF3FB">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/coin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="344dp"
                android:src="@drawable/bitcoinlogo" />

            <TextView
                android:id="@+id/currPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="-46dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Market Stats"
                android:textColor="#282D3E"
                android:textSize="22dp" />


            <com.robinhood.spark.SparkView
                android:id="@+id/stockChartData"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="30dp"
                app:spark_animateChanges="true"
                app:spark_lineColor="#050A1A"
                app:spark_scrubEnabled="true" />

            <TextView
                android:id="@+id/pestnamedetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Market Stats"
                android:textColor="#050A1A"
                android:textSize="22dp" />

            <!--            Total volume section-->

            <ImageView
                android:id="@+id/vol"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/volume"
                android:padding="100dp"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="-25dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Total Volume"
                android:textColor="#000000"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/totalVol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="276dp"
                android:layout_marginTop="-30dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="  300 Billion"
                android:textColor="#282D3E"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/cap"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/marketcap"
                android:padding="100dp"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="-25dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Market Cap"
                android:textColor="#000000"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/markCap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="276dp"
                android:layout_marginTop="-30dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="  300 Billion"
                android:textColor="#282D3E"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/rank"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/popularity"
                android:padding="100dp"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="-25dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Popularity"
                android:textColor="#000000"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/markRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="345dp"
                android:layout_marginTop="-30dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="#1"
                android:textColor="#282D3E"
                android:textSize="15dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textCoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Test"
            android:textColor="#050A1A"
            android:textSize="23dp" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="344dp"
            android:src="@drawable/backto" />



    </RelativeLayout>
</ScrollView>